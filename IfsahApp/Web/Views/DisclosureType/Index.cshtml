@model IEnumerable<IfsahApp.Core.Models.DisclosureType>

@{
    ViewData["Title"] = "Disclosure Types";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Disclosure Type</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Arabic Name</th>
            <th>English Name</th>
            <th class="text-center">Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ArabicName</td>
            <td>@item.EnglishName</td>
            <td class="text-center">
                <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-success" : "btn-secondary") px-2 py-0">
                        @(item.IsActive ? "✓ Active" : "✗ Inactive")
                    </button>
                </form>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
