@*
  Layout يجمع كل الـ Partials كما هي بدون أي تغيير وظيفي
*@
<!DOCTYPE html>
<html lang="ar" data-theme="light" dir="rtl">
<head>
    @await Html.PartialAsync("Partials/Head/_Meta")
    @await Html.PartialAsync("Partials/Head/_Styles")
    @RenderSection("Styles", required: false)
</head>
<body data-theme="light">
    @await Html.PartialAsync("Partials/_SkipLink")
    @await Html.PartialAsync("Partials/Header/_HeaderTop")
    @await Html.PartialAsync("Partials/Header/_MainHeader")
    @await Html.PartialAsync("Partials/Nav/_TopNavbar")

    @await Html.PartialAsync("Partials/Messages/_MessagesContainer")

    <main role="main" class="container my-4 fade-in" id="main-content">
        @await Html.PartialAsync("Partials/Main/_IntroCard")
        @RenderBody()
        @await Html.PartialAsync("Partials/Main/_ImageSection")
    </main>

    @await Html.PartialAsync("Partials/Footer/_Footer")
    @await Html.PartialAsync("Partials/Modals/_PersonModal")

    @await Html.PartialAsync("Partials/Scripts/_Scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
