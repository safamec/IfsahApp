@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["AlertsActivationFailedTitle"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/alerts.css" asp-append-version="true" />
}

<div class="container py-5 alerts" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card alerts-card shadow-sm">
                <div class="alerts-hero text-center p-4">
                    <span class="badge alerts-badge mb-2">@Localizer["AlertsHeaderBadge"]</span>
                    <h2 class="m-0">@Localizer["AlertsActivationFailedTitle"]</h2>
                </div>

                <div class="card-body text-center p-4 p-md-5">
                    <div class="alerts-icon mb-3" aria-hidden="true">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>

                    <p class="lead mb-2">@Localizer["AlertsActivationFailedLead"]</p>
                    <p class="text-muted mb-4">@Localizer["AlertsActivationFailedHint"]</p>

                  
                <a href="https://localhost:5001/" class="btn btn-primary">
    @Localizer["HomeButton"]
</a>

                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            @Localizer["BackButton"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
