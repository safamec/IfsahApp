@{
    Layout = "_Layout"; // أو "_AdminLayout"
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SubscriptionConfirmedTitle"];
}
<div class="container py-5" dir="rtl">
  <style>
    :root{
      --brandDark:#0d3b66; --brandBlue:#0d6efd; --brandAccent:#f26522; --muted:#6c757d;
    }
    .cs-card{border:0;border-radius:16px;overflow:hidden;box-shadow:0 8px 30px rgba(0,0,0,.08);}
    .cs-hero{background:linear-gradient(135deg,var(--brandDark),var(--brandBlue));color:#fff;}
    .cs-hero .cs-badge{background:rgba(255,255,255,.15);border:1px solid rgba(255,255,255,.25);padding:.25rem .6rem;border-radius:999px;font-size:.85rem}
    .cs-icon{width:84px;height:84px;border-radius:50%;display:flex;align-items:center;justify-content:center;
             background:#fff;color:var(--brandDark);box-shadow:0 6px 16px rgba(0,0,0,.12);margin:-42px auto 12px;border:4px solid #fff;}
    .cs-actions .btn{min-width:200px}
  </style>

  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="cs-card">
        <div class="p-4 cs-hero text-center">
          <div class="cs-badge mb-2">@Localizer["UpdatesSubscriptionBadge"]</div>
          <h2 class="m-0">@Localizer["SubscriptionConfirmedHeading"]</h2>
          @if (ViewBag.Report is string r && !string.IsNullOrWhiteSpace(r)) {
            <p class="mb-0 mt-2">@string.Format(Localizer["ForReportNumber"].Value, r)</p>
          }
        </div>

        <div class="bg-white text-center p-4 p-md-5">
          <div class="cs-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM7 10.5l4.5-4.5-1.06-1.06L7 8.38 5.56 6.94 4.5 8l2.5 2.5z"/>
            </svg>
          </div>
          <p class="lead mb-2">@Localizer["YouWillReceiveUpdates"]</p>
          <p class="text-muted mb-4">@Localizer["SafeToClosePage"]</p>

          <div class="cs-actions d-grid gap-2 d-sm-flex justify-content-center">
            <a class="btn btn-primary btn-lg" href="/">@Localizer["BackToHome"]</a>
            <a class="btn btn-outline-secondary btn-lg" href="javascript:history.back()">@Localizer["GoBack"]</a>
          </div>

          <div class="mt-4 small text-muted">
            @Localizer["TipAddSenderToSafeList"]
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
