@model IfsahApp.Core.ViewModels.DisclosureFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Suspected People"];
    ViewData["Step"]  = 2;
    var suspected = Model.SuspectedPersons ?? new List<IfsahApp.Core.Models.SuspectedPerson>();
}

@section StepTabs { @await Html.PartialAsync("_DisclosureTabs") }

<h2>@ViewData["Title"]</h2>

<form asp-action="SuspectedPeople" method="post" id="suspectedForm">
    <div class="mb-3">
        <label class="form-label fw-bold">@Localizer["Suspected People"]</label>

        <div>
            <!-- نحدد نوع الأشخاص بالخاصية data-type -->
            <button id="btnAddPerson"
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2"
                    data-type="Suspected">
                @Localizer["AddSuspectedPersonButton"]
            </button>
        </div>

        <div class="mt-3">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Email"]</th>
                    <th>@Localizer["Phone"]</th>
                    <th>@Localizer["Organization"]</th>
                    <th style="width:40px;"></th>
                </tr>
                </thead>
                <tbody id="peopleList">
                @for (int i = 0; i < suspected.Count; i++)
                {
                    <tr>
                        <td>@suspected[i].Name
                            <input type="hidden" name="SuspectedPersons[@i].Name" value="@suspected[i].Name" />
                        </td>
                        <td>@suspected[i].Email
                            <input type="hidden" name="SuspectedPersons[@i].Email" value="@suspected[i].Email" />
                        </td>
                        <td>@suspected[i].Phone
                            <input type="hidden" name="SuspectedPersons[@i].Phone" value="@suspected[i].Phone" />
                        </td>
                        <td>@suspected[i].Organization
                            <input type="hidden" name="SuspectedPersons[@i].Organization" value="@suspected[i].Organization" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-link p-0 text-danger fw-bold" data-delete-row>&#10006;</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <button type="submit" name="submitDir" value="back" class="btn btn-secondary">@Localizer["Back"]</button>
        <button type="submit" class="btn btn-primary">@Localizer["Next"]</button>
    </div>
</form>

<!-- Modal (فارغ – الـPartial سيتحمّل داخله) -->
<div class="modal fade" id="personModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog"><div class="modal-content"><div class="modal-body"></div></div></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- ملف الجافاسكربت العام المشترك -->
    <script src="~/js/people-modal.js"></script>

    <!-- تهيئة بسيطة للصفحة الحالية -->
    <script>
      window.initPeopleModal({
        buttonId:   "btnAddPerson",
        listId:     "peopleList",
        modalId:    "personModal",
        prefix:     "SuspectedPersons"  // مهم لاسم الحقول
      });
    </script>
}
