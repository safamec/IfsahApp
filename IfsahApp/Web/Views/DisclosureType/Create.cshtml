@model DisclosureType

@{
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    var title = actionName == "Create" ? "Create New Disclosure Type" : "Edit Disclosure Type";
    ViewData["Title"] = title;
}

<div class="container mt-4">
    <h2>@title</h2>

    <form asp-action="@actionName">
        <div class="mb-3">
            <label asp-for="ArabicName" class="form-label"></label>
            <input asp-for="ArabicName" class="form-control" />
            <span asp-validation-for="ArabicName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EnglishName" class="form-label"></label>
            <input asp-for="EnglishName" class="form-control" />
            <span asp-validation-for="EnglishName" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
