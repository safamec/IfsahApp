@model IfsahApp.Core.ViewModels.PeopleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<form id="personForm" method="post" asp-controller="People" asp-action="Create">
    @Html.AntiForgeryToken()

    <!-- نرسل النوع مرتين لضمان الربط -->
    <input type="hidden" name="Type" value="@Model.Type" />
    <input type="hidden" name="peopletype" value="@Model.Type" />

    <div class="mb-3">
        <label class="form-label">@Localizer["NameLabel"]</label>
        <input name="Name" class="form-control" />
        <span class="text-danger" data-valmsg-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["EmailLabel"]</label>
        <input name="Email" class="form-control" />
        <span class="text-danger" data-valmsg-for="Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["PhoneLabel"]</label>
        <input name="Phone" class="form-control" />
        <span class="text-danger" data-valmsg-for="Phone"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["OrganizationLabel"]</label>
        <input name="Organization" class="form-control" />
        <span class="text-danger" data-valmsg-for="Organization"></span>
    </div>

    <div class="d-flex gap-2 justify-content-end">
        <button type="submit" class="btn btn-success">@Localizer["SaveBtn"]</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["CancelBtn"]</button>
    </div>
</form>
