@model DisclosureType
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using System.Globalization

@{
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    var titleLocal = (actionName == "Create")
        ? Localizer["CreateDisclosureTypeTitle"]
        : Localizer["EditDisclosureTypeTitle"];
    ViewData["Title"] = titleLocal;
    var isAr = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar";
}

<div class="container mt-4" dir="@(isAr ? "rtl" : "ltr")">
    <div class="card shadow border-0 rounded-4 overflow-hidden">

        <!-- شريط علوي بنفس لون النافبار -->
        <div class="d-flex justify-content-between align-items-center p-3 text-white"
             style="background-color: var(--navbar-bg);">
            <h2 class="h5 m-0">@titleLocal</h2>
        </div>

        <div class="card-body p-4">
            <!-- ملخّص التحقق -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

            <form asp-action="@actionName" method="post" class="row g-3">
                <div class="col-12">
                    <label asp-for="ArabicName" class="form-label">@Localizer["ArabicNameLabel"]</label>
                    <input asp-for="ArabicName" class="form-control" placeholder="@Localizer["ArabicNamePh"]" />
                    <span asp-validation-for="ArabicName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="EnglishName" class="form-label">@Localizer["EnglishNameLabel"]</label>
                    <input asp-for="EnglishName" class="form-control" placeholder="@Localizer["EnglishNamePh"]" />
                    <span asp-validation-for="EnglishName" class="text-danger"></span>
                </div>

                <div class="col-12 form-check mt-2">
                    <input asp-for="IsActive" class="form-check-input" id="isActiveChk" />
                    <label asp-for="IsActive" class="form-check-label" for="isActiveChk">@Localizer["IsActiveLabel"]</label>
                </div>

                <div class="col-12 d-flex justify-content-end gap-2 pt-2">
                    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
