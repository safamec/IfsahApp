<div class="header-top">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="header-controls d-flex align-items-center">
            <div class="language-switcher me-3">
                <button id="ar-btn" class="btn btn-outline-secondary btn-sm active" onclick="switchLanguage('ar')">العربية</button>
                <button id="en-btn" class="btn btn-outline-secondary btn-sm" onclick="switchLanguage('en')">English</button>
            </div>
            <button class="theme-toggle btn btn-outline-secondary btn-sm" onclick="toggleTheme()" title="تبديل الوضع الداكن">
                <i class="bi bi-moon-fill" id="theme-icon"></i>
                <span class="d-none d-sm-inline">تبديل النمط</span>
            </button>
        </div>
    </div>
</div>
