@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["AlertsActivationSuccessTitle"];
    var report = ViewBag.Report as string ?? "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/alerts.css" asp-append-version="true" />
}

<div class="container py-5 alerts" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card alerts-card shadow-sm">
                <div class="alerts-hero success text-center p-4">
                    <span class="badge alerts-badge mb-2">@Localizer["AlertsHeaderBadge"]</span>
                    <h2 class="m-0">@Localizer["AlertsActivationSuccessTitle"]</h2>
                    @* سطر اختياري لعرض رقم البلاغ *@
                    <div class="small mt-2 opacity-75">@Localizer["ForReport"] <strong>@report</strong></div>
                </div>

                <div class="card-body text-center p-4 p-md-5">
                    <div class="alerts-icon success mb-3" aria-hidden="true">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>

                    <p class="lead mb-3">@Localizer["AlertsActivationSuccessLead"]</p>

                <a href="https://localhost:5001/" class="btn btn-primary">
    @Localizer["HomeButton"]
</a>

                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            @Localizer["BackButton"]
                        </a>
                    </div>

                    <small class="d-block text-muted mt-4">
                        @Localizer["WhitelistHint"]
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
