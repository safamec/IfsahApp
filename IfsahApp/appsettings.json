{
  "Authentication": {
    "UseFakeUser": false
  },
  "SmtpSettings": {
    "Host": "mail.mem.gov.om",
    "Port": 25,
    "EnableSsl": true,
    "UserName": "apps services",
    "FromAddress": "apps.services@mem.gov.om",
    "FromName": "Ifsah App"
  },
  "Ldap": {
    "Server": "ldap.company.com",
    "Port": 389,
    "BindUser": "service.account@company.com",
    "BindPassword": "SuperSecretPassword",
    "SearchBase": "DC=company,DC=com"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db"
  }, 
   "AttachmentSettings": {
    "BasePath": "uploads"
  },
  "FileUploadSettings": {
    "AllowedExtensions": [
      ".jpg", ".jpeg", ".png", ".gif", ".bmp",
      ".mp4", ".mov", ".avi", ".wmv", ".mkv",
      ".pdf",
      ".doc", ".docx",
      ".xls", ".xlsx",
      ".ppt", ".pptx"
    ],
    "MaxFileSize": 10485760
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
