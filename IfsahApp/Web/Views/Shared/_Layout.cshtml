@using System.Globalization
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName"
      dir="@(CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "rtl" : "ltr")">
<head>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="نظام تلقي الإفصاحات - وزارة الطاقة والمعادن - حماية المبلغين وتعزيز الشفافية" />
  <title>@SharedLocalizer["system_name"]</title>

  @await Html.PartialAsync("_ThemeStyles")
  <link rel="stylesheet" href="~/css/components/_tables.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/review.css" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>
<body>
  <div id="page-wrapper" class="d-flex flex-column min-vh-100">
    @await Html.PartialAsync("Header/_MainHeader")
    @await Html.PartialAsync("Navbar/_Navbar")

    @{
      var hasAdminSidebar = IsSectionDefined("AdminSidebar");
    }
    @if (hasAdminSidebar)
    {
      <div class="admin-frame container-fluid px-0">
        @RenderSection("AdminSidebar", required: false)
        <main class="admin-content">
          @RenderSection("StepTabs", required: false)  <!-- ✅ إضافة لعرض تبويبات الخطوات -->
          @RenderBody()
        </main>
      </div>
    }
    else
    {
      <main class="container my-4 flex-fill" id="main-content">
        @RenderSection("StepTabs", required: false)    <!-- ✅ إضافة لعرض تبويبات الخطوات -->
        @RenderBody()
      </main>
    }
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery





@{


    var csrf = Antiforgery.GetAndStoreTokens(Context).RequestToken;


}

    @await Html.PartialAsync("Footer/_Footer")
  </div>
  @{
  var tokens = Antiforgery.GetAndStoreTokens(Context);
  var isAdmin = User.IsInRole("Admin") || User.IsInRole("Examiner");
}

  @await Html.PartialAsync("_ThemeScripts")
  
  
  @RenderSection("Scripts", required: false)

</body>
</html>
