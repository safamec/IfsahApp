@model List<CaseItem>

@{
    ViewBag.Title = "Review Dashboard";
}

<div class="container-custom">
    <h2>Discloser Review Dashboard</h2>

    <!-- Filter Box -->
    <form method="get" class="filter-box">
        <div class="form-group">
            <label for="reference">Reference</label>
            <input type="text" name="reference" class="filter-input" value="@ViewBag.SelectedReference" placeholder="Enter reference"/>
        </div>

        <div class="form-group">
            <label for="pageSize">Show</label>
            <select name="pageSize" class="filter-input">
                <option value="5" selected="@(ViewBag.PageSize == 5 ? "selected" : null)">5</option>
                <option value="10" selected="@(ViewBag.PageSize == 10 ? "selected" : null)">10</option>
                <option value="20" selected="@(ViewBag.PageSize == 20 ? "selected" : null)">20</option>
                <option value="50" selected="@(ViewBag.PageSize == 50 ? "selected" : null)">50</option>
            </select>
        </div>

        <div class="button-group">
            <button type="submit" class="filter-btn">Filter</button>
            <a href="@Url.Action("Index","Review")" class="clear-btn">Clear</a>
        </div>
    </form>

    <!-- Table -->
    <div class="table-custom-responsive">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Reference</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="6">No data available.</td>
                    </tr>
                }
                else
                {
                    foreach (var caseItem in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("ReviewDisclosure","Review", new { reference = caseItem.Reference })" class="table-btn table-btn-sm">
                                    Review
                                </a>
                            </td>
                            <td>@caseItem.Status</td>
                            <td>@caseItem.Location</td>
                            <td>@caseItem.Date.ToString("yyyy-MM-dd")</td>
                            <td>@caseItem.Type</td>
                            <td><code>@caseItem.Reference</code></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav>
        <ul class="pagination-custom">
            <li class="@(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a href="@Url.Action("Index", new { reference = ViewBag.SelectedReference, page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="@(ViewBag.CurrentPage == i ? "active" : "")">
                    <a href="@Url.Action("Index", new { reference = ViewBag.SelectedReference, page = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }

            <li class="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a href="@Url.Action("Index", new { reference = ViewBag.SelectedReference, page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">Next</a>
            </li>
        </ul>
    </nav>
</div>
