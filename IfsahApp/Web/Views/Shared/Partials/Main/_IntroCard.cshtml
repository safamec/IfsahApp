@inject IViewLocalizer Localizer

<div class="card shadow-sm">
    <div class="card-body">
        <h2>@Localizer["welcome_title"]</h2>
        <p>@Localizer["welcome_message"]</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button class="btn btn-primary me-md-2">@Localizer["learn_more"]</button>
            <button class="btn btn-outline-secondary">@Localizer["contact"]</button>
        </div>
    </div>
</div>
