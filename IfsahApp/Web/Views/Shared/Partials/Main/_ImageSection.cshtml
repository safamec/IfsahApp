@inject IViewLocalizer Localizer

<div class="image-section fade-in">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-3">@Localizer["Image_Title"]</h3>
            <div class="image-container">
                <img src="logo.png" alt="@Localizer["Image_Alt"]">
            </div>
            <p class="image-caption mt-3">@Localizer["Image_Caption"]</p>
        </div>
    </div>
</div>
