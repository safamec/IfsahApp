@model AdUser

@{
    ViewData["Title"] = "Welcome";
}

<h2>Welcome, @Model.DisplayName!</h2>

<table>
    <tr><th>Username:</th><td>@Model.SamAccountName</td></tr>
    <tr><th>Email:</th><td>@Model.Email</td></tr>
    <tr><th>Department:</th><td>@Model.Department</td></tr>
</table>

<!-- ✅ تنبيه لو البريد مو مؤكّد -->
@if (ViewData["EmailNotConfirmed"] as bool? == true)
{
    <div class="alert alert-warning mt-3">
        بريدك الإلكتروني غير مؤكد. <br />
        لقد أرسلنا رابط تأكيد إلى: <strong>@ViewData["UserEmail"]</strong>
        <form asp-action="ResendConfirmation" method="post" class="mt-2">
            <input type="hidden" name="uid" value="@ViewData["UserId"]" />
            <button type="submit" class="btn btn-primary">إعادة إرسال رابط التفعيل</button>
        </form>
    </div>
}

<form method="post" asp-action="Logout" class="mt-3">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>
