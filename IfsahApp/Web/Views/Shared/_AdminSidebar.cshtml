@{
    var currentAction = (ViewContext?.RouteData?.Values["action"] as string) ?? "";
    var currentController = (ViewContext?.RouteData?.Values["controller"] as string) ?? "";
    Func<string,string,bool> isActive = (ctrl, act) =>
        string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
        string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase);
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<aside class="admin-sidebar">
  <!-- Brand -->
  <a class="brand d-inline-flex align-items-center gap-2 text-white text-decoration-none mb-3"
     asp-area="" asp-controller="Dashboard" asp-action="Index">
     <span class="brand-mark d-inline-flex align-items-center justify-content-center">
       <i class="bi bi-speedometer2"></i>
     </span>
     <span class="brand-text">@Localizer["Dashboard"]</span>
  </a>

  <nav class="nav flex-column">
    <div class="nav-section">@Localizer["Administration"]</div>

    <a class="nav-link @(isActive("Admin","AdminPanal") ? "active" : "")"
       asp-controller="Admin" asp-action="AdminPanal">
       <i class="bi bi-people"></i>
       <span>@Localizer["UsersNav"]</span>
    </a>

    <a class="nav-link @(isActive("Admin","AddExaminer") ? "active" : "")"
       asp-controller="Admin" asp-action="AddExaminer">
       <i class="bi bi-person-plus"></i>
       <span>@Localizer["AddUserNav"]</span>
    </a>

    <div class="nav-section mt-3">@Localizer["OtherSection"]</div>

    <a class="nav-link @(isActive("Disclosure","Index") ? "active" : "")"
       asp-controller="Disclosure" asp-action="Index">
       <i class="bi bi-file-earmark-text"></i>
       <span>@Localizer["DisclosuresNav"]</span>
       @if ((ViewBag.PendingCount ?? 0) > 0) { <span class="badge">@ViewBag.PendingCount</span> }
    </a>

<a class="nav-link" asp-controller="DisclosureType" asp-action="Index">
   <i class="bi bi-folder2-open"></i> @Localizer["DisclosureTypesNav"]
</a>
        
    <a class="nav-link @(isActive("Notifications","Index") ? "active" : "")"
       asp-controller="Notifications" asp-action="Index">
       <i class="bi bi-bell"></i>
       <span>@Localizer["NotificationsNav"]</span>
       @if ((ViewBag.Unread ?? 0) > 0) { <span class="badge">@ViewBag.Unread</span> }
    </a>

    <a class="nav-link @(isActive("Home","Index") ? "active" : "")"
       asp-controller="Home" asp-action="Index">
       <i class="bi bi-house"></i>
       <span>@Localizer["HomeNav"]</span>
    </a>
  </nav>
</aside>
