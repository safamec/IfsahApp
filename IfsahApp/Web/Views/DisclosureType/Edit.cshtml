@model IfsahApp.Core.Models.DisclosureType

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditDisclosureTypeTitle"];
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="ArabicName" class="form-label">@Localizer["ArabicNameLabel"]</label>
            <input asp-for="ArabicName" class="form-control" />
            <span asp-validation-for="ArabicName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EnglishName" class="form-label">@Localizer["EnglishNameLabel"]</label>
            <input asp-for="EnglishName" class="form-control" />
            <span asp-validation-for="EnglishName" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">@Localizer["IsActiveLabel"]</label>
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["SaveChanges"]</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
