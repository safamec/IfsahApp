<div class="row g-3 mt-3">
    @for (int i = 0; i < Model.Count; i++)
    {
        var user = Model[i];
        string[] bgColors = { "#FE5D26", "#F2C078", "#FAEDCA", "#C1DBB3" };
        string textClass = (i % 4 == 2 || i % 4 == 3) ? "text-dark" : "text-white";
        var bgColor = bgColors[i % 4];

        <div class="col-md-3 col-sm-6">
            <form method="post" asp-action="Index">
                <input type="hidden" name="selectedSamAccountName" value="@user.SamAccountName" />

                <button type="submit" class="card p-3 animate__animated animate__bounce border-1"
                    style="--animate-duration:1s; animation-delay:@(i * 0.15)s; border-radius:15px; overflow:hidden; width:100%;">

                    <!-- Top colored header -->
                    <div style="background-color:@bgColor; height:100px; position:relative;"></div>

                    <!-- Avatar overlapping header -->
                    <div class="text-center" style="margin-top:-40px;">
                        <div class="rounded-circle border border-white"
                            style="width:80px; height:80px; background-color:rgba(255,255,255,0.3); display:inline-block;">
                            @* Replace with <img src="..." class="rounded-circle" /> if needed *@
                        </div>
                    </div>

                    <!-- Card body -->
                    <div class="card-body text-center">
                        <h5 class="card-title mb-1">@user.DisplayName</h5>
                        <p class="card-text text-muted mb-3">@user.Department</p>
                    </div>
                </button>
            </form>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
</style>
